{
  "Name": "ArmorRepair",
  "Enabled": true,
  "Version": "1.1",

  "Description": "Prevents mech armor lost in combat from being automatically replaced for free at the end of battle. Instead, create a work order to replace it, optionally costed by mech tonnage, as well as work orders to repair structure damage.",
  "Author": "Life",
  "Website": "https://github.com/citizenSnippy/ArmorRepair",
  
  "DependsOn": ["CustomComponents"],
  
  "DLL": "ArmorRepair.dll",

  "Settings": {
    "EnableStructureRepair": true,
    "ScaleStructureCostByTonnage": true,
    "ScaleArmorCostByTonnage": true,
    "EnableAutoRepairPrompt": true,
    "AutoRepairMechsWithDestroyedComponents": true,

    "ArmorCategory": "Armor",
    "StructureCategory": "Structure",

    "RepairCostByTag": [
      {
        "Tag": "SOME_TEMPLATE_TAG",
        "ArmorTPCost": 1,
        "ArmorCBCost": 1,
        "StructureTPCost": 1,
        "StructureCBCost": 1,
        "InstallTPCost": 1,
        "InstallCBCost": 1,
        "RepairTPCost": 1,
        "RepairCBCost": 1
      }
    ]
  }
}